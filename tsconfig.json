{
  "compilerOptions": {
      "target": "esnext",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "jsx": "preserve",
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitReturns": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": "src/",
      "declaration": true,
      "declarationDir": "dist",
      "inlineSources": true,
      "sourceMap": true,
      "rootDir": "src",
      "allowJs": true,
      "skipLibCheck": true,
      "noEmit": true,
      "incremental": true,
      "resolveJsonModule": true,
      "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
